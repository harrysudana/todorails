<h1>List Todos</h1>
<%= link_to 'New task', new_task_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Note</th>
    <th>Comment</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.note %></td>
      <td><%= task.comments.count %></td>
      <td><%= 'completed' unless task.completed.nil? %></td>
      <td>
      	<%= link_to 'Edit', edit_task_path(task) %> | 
      	<%= link_to 'Show', task_path(task) %> |
      	<%= link_to 'Destroy', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>